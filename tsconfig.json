{
  "include": ["src", "bin"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": ["ESNext"],
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "noEmit": true,
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "target": "ESNext",
    "baseUrl": "src",
    "allowImportingTsExtensions": true,
    "paths": {
      "@modules/*": ["modules/*"]
    }
  }
}
