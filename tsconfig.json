{
  "include": ["src"],
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "noEmit": false,
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "target": "ESNext",
    "baseUrl": ".",
    "allowImportingTsExtensions": false,
    "paths": {
      "@modules/*": ["src/modules/*"],
      "@utils/*": ["src/utils/*"],
      "@ctypes/*": ["src/types/*"]
    }
  }
}
